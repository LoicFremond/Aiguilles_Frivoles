{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Mon Profil
{% endblock %}

{% block body %}

	<a href="javascript:history.go(-1)"><i class="far fa-arrow-alt-circle-left h2"></i></a>
	<div class="container text-center">

		<h1 class="mb-5 text-center">Mon Profil</h1>
		<div class="col-lg-8 mx-auto">
			{{ form_start(form) }}
			<div class="row">
				<div class="col-lg-6">{{ form_row(form.lastname) }}</div>
				<div class="col-lg-6">{{ form_row(form.firstname) }}</div>
			</div>
			<div class="row">
				<div class="col-lg-6">{{ form_row(form.Password) }}</div>
				<div class="col-lg-6">{{ form_row(form.email) }}</div>
			</div>
			<div class="row">
				<div class="col-lg-6">{{ form_row(form.phone) }}</div>
				<div class="col-lg-6">{{ form_row(form.address) }}</div>
				<div class="col-lg-6">{{ form_row(form.postalCode) }}</div>
				<div class="col-lg-6">{{ form_row(form.city) }}</div>
			</div>
			{{ include('/user/_form.html.twig', {'button_label': 'Mettre Ã  jour'}) }}
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
