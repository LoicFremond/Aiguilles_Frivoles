{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}Nouvel Utilisateur
{% endblock %}

{% block body %}
        {% block flash_messages %}
            {{ include('@EasyAdmin/flash_messages.html.twig') }}
        {% endblock flash_messages %}
	<div class="container">
		<h1 class="my-5 text-center">Cr√©ation d'un compte</h1>
		<a class="btn btn-sm btn-outline-dark" href="{{ path('user_index') }}">Retour</a>
		<div class="row">
			<div class="col-md-8 mx-auto">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-6 mt-3">{{ form_row(form.firstname) }}</div>
					<div class="col-md-6 mt-3">{{ form_row(form.lastname) }}</div>
					<div class="col-md-6 mt-3">{{ form_row(form.email) }}</div>
					<div class="col-md-6 mt-3">{{ form_row(form.Password) }}</div>
				</div>
				<div class="row">
					<div class="col-md-6 mt-3">{{ form_row(form.city) }}</div>
					<div class="col-md-6 mt-3">{{ form_row(form.address) }}</div>
					<div class="col-md-6 mt-3">{{ form_row(form.postalCode) }}</div>
				</div>
				{{ include('user/_form.html.twig') }}
				{{ form_end(form) }}
			</div>

		</div>
	{% endblock %}
