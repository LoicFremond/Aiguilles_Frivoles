{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('product') }}
{% endblock %}
{% block title %}{% endblock %}

{% block body %}
	<div class="container-fluid position-relative col-12">
		<a target="_blank" href="//www.facebook.com/sharer.php?u=les-aiguilles-frivoles.com{{ path('article', {'categorySlug' : product.category.slug , 'productSlug': product.slug}) }}" class="share__facebook position-absolute end-0" title="Partager sur Facebook">
			<span class="fa fa-facebook"></span>
			<span>Partager</span>
			<span class="visually-hidden">Partager sur Facebook</span>
		</a>
		<a href="javascript:history.go(-1)">
			<i class="far fa-arrow-alt-circle-left h2"></i>
		</a>
		<h1 class="mb-5 text-center">{{ product.name }}</h1>
		<div class="d-flex flex-wrap mx-5">
			<img src="{{ product.picture }}" class="product__img col-lg-4 mx-lg-0 col-md-10 mx-md-auto mb-5" alt="{{ product.name }}">
			<div class="col-md-10 mx-lg-2 mx-md-auto my-auto col-lg-5">
				<p>Description :
					{{ product.description }}</p>
				{% if product.material %}
					<p>Materiaux :
						{{ product.material }}</p>
				{% endif %}
				{% if product.gems %}
					<p>Gemmes :
						{{ product.gems }}</p>
				{% endif %}
				{% if product.gems2 %}
					<p>Gemmes :
						{{ product.gems2 }}</p>
				{% endif %}
				{% if product.size %}
					<p>Dimension :
						{{ product.size }}</p>
				{% endif %}
				{% if product.closing %}
					<p>Fermeture :
						{{ product.closing }}</p>
				{% endif %}
			</div>
		</div>
		<div class="text-center">
			<p class="mt-5">Prix :
				{{ product.price }}â‚¬ + Frais de port</p>
			<div class="mt-2 mb-5">
				{% for element in dataCart %}
					{% if element.product.id == product.id %}
						<a class="btn rupt position-absolute" href="{{ path('cart_delete', {'id': product.id}) }}">Supprimer du panier</a>
					{% endif %}
				{% endfor %}
					{% if product.status == true %}
						<a class="btn shop" href="{{ path('cart_add', {'id': product.id}) }}">Ajouter au panier</a>
					{% else %}
						<p class="btn rupt">Rupture de stock</p>
					{% endif %}
				</div>
			</div>
	</div>
</div></div></div>{% endblock %}
