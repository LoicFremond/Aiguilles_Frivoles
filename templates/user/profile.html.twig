{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Mon Profil
{% endblock %}

{% block body %}
	<div class="container text-center">

		<h1 class="my-5 text-center">Mon Profil</h1>
			<div class="col-md-8 mx-auto">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-6">{{ form_row(form.lastname) }}</div>
					<div class="col-md-6">{{ form_row(form.firstname) }}</div>
				</div>
				<div class="row">
					<div class="col-md-6">{{ form_row(form.Password) }}</div>
					<div class="col-md-6">{{ form_row(form.email) }}</div>
				</div>
				<div class="row">
					<div class="col-md-6">{{ form_row(form.phone) }}</div>
					<div class="col-md-6">{{ form_row(form.address) }}</div>
					<div class="col-md-6">{{ form_row(form.postalCode) }}</div>
					<div class="col-md-6">{{ form_row(form.city) }}</div>
				</div>
				{{ include('/user/_form.html.twig', {'button_label': 'Mettre Ã  jour'}) }}
				{{ include('/user/_delete_form.html.twig') }}
				{{ form_end(form) }}
			</div>
		</div>

{% endblock %}
